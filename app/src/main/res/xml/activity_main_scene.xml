<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="5000"
        motion:motionInterpolator="overshoot">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/changeAnimBtn" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_editor_absoluteY="645dp"
            android:layout_height="52dp"
            motion:layout_editor_absoluteX="100dp"
            android:layout_width="211dp"
            android:id="@+id/changeAnimBtn" />
        <Constraint
            android:id="@+id/drawPathCustomView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_editor_absoluteY="0dp"
            motion:layout_editor_absoluteX="0dp">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/white" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/drawPathCustomView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_editor_absoluteY="0dp"
            motion:layout_editor_absoluteX="0dp">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/black" />
        </Constraint>
        <Constraint
            motion:layout_editor_absoluteY="645dp"
            android:layout_height="52dp"
            motion:layout_editor_absoluteX="100dp"
            android:layout_width="211dp"
            android:id="@+id/changeAnimBtn" />
    </ConstraintSet>
</MotionScene>